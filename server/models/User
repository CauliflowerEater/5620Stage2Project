import { Double } from "mongodb";

const mongoose = require("mongoose");

const userSchema = new mongoose.Schema({
  userName: {
    type: String,
    required: true,
    unique: true,
    trim: true,
    minlength: 4,
  },
  password: {
    type: String,
    trim: true,
    minlength: 6,
    required: true,
  },
  preference: {
    type: String,
    trim: true,
    required: true,
  },
  goals: {
    type: [goalSchema],
    required: false,
  },
  email: {
    type: String,
    required: true,
    trim: true,
    match: [/\S+@\S+\.\S+/, "Please use a valid email address"],
  },
  proerties: {
    type: [propertySchema],
    required: false,
  },
  incomes: {
    type: [incomeSchema],
    required: false,
  },
  debts: {
    type: [debtSchema],
    required: false,
  },
  accountbook: {
    type: [trasactionRecordSchema],
    required: false,
  },
  conditionReports: {
    type: [conditionReportSchem],
    required: false,
  },
  adviceReports: {
    type: [adviceReportSchema],
    required: false,
  },
});

const goalSchema = mongoose.Schema({
  description: {
    type: String,
    trim: true,
  },
  amount: {
    type: Double,
    trim: true,
    required: true,
    min: 0,
  },
  date: {
    type: Date,
    required: true,
  },
});

const propertySchema = mongoose.Schema({
  description: {
    type: String,
    trim: true,
    required: true,
  },
  amount: {
    type: Double,
    trim: true,
    required: true,
    min: 0,
  },
});

const incomeSchema = mongoose.Schema({
  description: {
    type: String,
    trim: true,
    required: true,
  },
  amount: {
    type: Double,
    trim: true,
    required: true,
    min: 0,
  },
});

const debtSchema = mongoose.Schema({
  description: {
    type: String,
    trim: true,
    required: true,
  },
  amount: {
    type: Double,
    trim: true,
    required: true,
    min: 0,
  },
});

const trasactionRecordSchema = mongoose.Schema({
  transactionType: {
    type: String,
    trim: true,
    required: true,
  },
  amount: {
    type: Double,
    trim: true,
    required: true,
    min: 0,
  },
  date: {
    type: Date,
    required: true,
  },
});

const conditionReportSchem = mongoose.Schema({
  content: {
    type: String,
    trim: true,
    required: true,
  },
  date: {
    type: Date,
    required: true,
  },
});

const adviceReportSchema = mongoose.Schema({
  adviceType: {
    type: String,
    trim: true,
    required: true,
  },
  content: {
    type: String,
    trim: true,
    required: true,
  },
  date: {
    type: Date,
    required: true,
  },
});

const User = mongoose.model("User", userSchema);

module.exports = User;
